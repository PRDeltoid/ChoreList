<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:paddingLeft="@dimen/list_item_side_padding"
    android:paddingRight="@dimen/list_item_side_padding" >

    <TextView
        android:id="@+id/chore_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|start"
        android:duplicateParentState="true"
        android:hint="@string/placeholder_chore_name" />

    <TextView
        android:id="@+id/interval"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toEndOf="@id/chore_name"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|end"
        android:hint="@string/placeholder_date" />

</RelativeLayout>
