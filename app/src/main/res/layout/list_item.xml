<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:paddingLeft="@dimen/list_item_side_padding"
    android:paddingRight="@dimen/list_item_side_padding"
    android:paddingTop="@dimen/list_top_padding">
    <TextView
        android:id="@+id/chore_name"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_height="@dimen/list_subitem_height"
        android:textAppearance="?android:textAppearanceMedium"
        android:hint="@string/placeholder_chore_name"
        android:textColor="@color/colorPrimary" />
    <TextView
        android:id="@+id/interval"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_subitem_height"
        android:textAppearance="?android:textAppearanceMedium"
        android:hint="@string/placeholder_date"
        android:layout_alignParentRight="true" />
</RelativeLayout>
